<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.eee0.test.ajax.dao.FavoriteDAO" >
  	
  	<select id="selectFavorite" resultType="com.eee0.test.ajax.model.Favorite">
  		
  		SELECT
  			`id`
  			, `name`
  			, `url`
  			, `createdAt`
  			, `updatedAt`
  		FROM
  			`url_favorites`
  	
  	</select>
  	
  	<insert id="insertFavorite" parameterType="com.eee0.test.ajax.model.Favorite">
  		
  		INSERT INTO
  			`url_favorites`
  		(
  			`name`
  			, `url`
  			, `createdAt`
  			, `updatedAt`	
  		)
  		VALUES
  		(
  			#{name}
  			, #{url}
  			, now()
  			, now()
  		)
  		
  		
  	</insert>
  	
  	<select id="selectCountByName" parameterType="string" resultType="int">
  		
  		SELECT
  			count(1)
  		FROM
  			`url_favorites`
  		WHERE
  			`url` = #{url}
  		
  	</select>
  	
  	<delete id="deleteFavorite" parameterType="string">

		DELETE 
			 
		FROM 
			`url_favorites` 
		WHERE 
			`id` = #{id};
  			
  	
  	</delete>
  	
  </mapper>